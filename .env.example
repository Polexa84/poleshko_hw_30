# ======== PostgreSQL ========
POSTGRES_DB_NAME=your_db_name          # Имя базы данных
POSTGRES_USER=your_db_user            # Пользователь БД
POSTGRES_PASSWORD=your_db_password    # Пароль (должен быть сложным)
POSTGRES_HOST=db                      # В Docker используй имя сервиса (db)
POSTGRES_PORT=5432                    # Стандартный порт PostgreSQL

# ======== Django ========
SECRET_KEY=your_secret_key_here       # Обязательно для Django
DEBUG=True                           # False в production
ALLOWED_HOSTS=*                      # Для разработки, в продакшене укажи домены

# ======== Redis ========
REDIS_HOST=redis                     # В Docker используй имя сервиса (redis)
REDIS_PORT=6379                      # Стандартный порт Redis
REDIS_DB=0                           # Номер базы Redis (по умолчанию 0)

# ======== Stripe ========
STRIPE_SECRET_KEY=your_stripe_key    # Тестовый ключ Stripe

# ======== Email ========
EMAIL_HOST_USER=your_email@example.com
EMAIL_HOST_PASSWORD=your_email_password
EMAIL_PORT=587                       # Для SMTP
EMAIL_USE_TLS=True                   # Шифрование